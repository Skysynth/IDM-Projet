<?xml version="1.0" encoding="UTF-8"?>
<project default="schemaTableToJavaApp" name="fr.l127.schemaTableToJavaApp">
    <property name="ECLIPSE_HOME" value="../../../../Logiciels/eclipse/modeling-2023-09/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../.."/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="fr.l127.schemaTableToJavaApp.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/fr.l127.schemaTableToJavaApp/bin"/>
    </path>

    <path id="fr.l127.schemaTableToJavaApp.classpath">
        <path refid="fr.l127.schemaTableToJavaApp.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="fr.l127.schemaTableToJavaApp.libraryclasspath.alljars">
        <pathelement location="../fr.l127.schemaTableToJavaApp/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="fr.l127.schemaTableToJavaApp.classpath.alljars">
        <path refid="fr.l127.schemaTableToJavaApp.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="schemaTableToJavaApp">
        <java classname="fr.l127.schemaTableToJavaApp.main.SchemaTableToJavaApp" classpathref="fr.l127.schemaTableToJavaApp.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="schemaTableToJavaApp.alljars">
        <java classname="fr.l127.schemaTableToJavaApp.main.SchemaTableToJavaApp" classpathref="fr.l127.schemaTableToJavaApp.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
