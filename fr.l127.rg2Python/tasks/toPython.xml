<?xml version="1.0" encoding="UTF-8"?>
<project default="toPython" name="fr.l127.rg2Python">
    <property name="ECLIPSE_HOME" value="../../../../Logiciels/eclipse/modeling-2023-09/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../.."/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="fr.l127.rg2Python.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/fr.l127.rg2Python/bin"/>
    </path>

    <path id="fr.l127.rg2Python.classpath">
        <path refid="fr.l127.rg2Python.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="fr.l127.rg2Python.libraryclasspath.alljars">
        <pathelement location="../fr.l127.rg2Python/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="fr.l127.rg2Python.classpath.alljars">
        <path refid="fr.l127.rg2Python.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="toPython">
        <java classname="fr.l127.rg2Python.main.ToPython" classpathref="fr.l127.rg2Python.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="toPython.alljars">
        <java classname="fr.l127.rg2Python.main.ToPython" classpathref="fr.l127.rg2Python.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
